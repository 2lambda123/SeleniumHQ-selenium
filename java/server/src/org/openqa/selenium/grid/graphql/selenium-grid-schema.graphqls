schema {
  query: GridQuery
}

scalar Uri

enum Status {
  UP
  DRAINING
  UNAVAILABLE
}

type Node {
  id: ID!
  uri: Uri!
  host: String!
  port: Int!
  status: Status!
  maxSession: Int!
}

type GridQuery {
  grid: Grid!
}

type Grid {
  uri: Uri!
  host: String!
  port: Int!
  nodes: [Node!]!
  totalSlots: Int
  usedSlots: Int
}
